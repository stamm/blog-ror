<h1>Listing posts</h1>

<table>
  <tr>
    <th><%= Post.human_attribute_name(:title) %></th>
    <th><%= Post.human_attribute_name(:status) %></th>
    <th><%= Post.human_attribute_name(:post_time) %></th>
    <th><%= Post.human_attribute_name(:author) %></th>
    <th><%= Post.human_attribute_name(:url) %></th>
    <th><%= Post.human_attribute_name(:short_url) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= t(post.get_status.to_s) %></td>
    <td><%= post.post_date %></td>
    <td><%= post.author_id %></td>
    <td><%= post.url %></td>
    <td><%= post.short_url %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

