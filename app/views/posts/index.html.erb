<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Content display</th>
    <th>Status</th>
    <th>Post time</th>
    <th>Author</th>
    <th>Url</th>
    <th>Short url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.content_display %></td>
    <td><%= post.status %></td>
    <td><%= post.post_time %></td>
    <td><%= post.author_id %></td>
    <td><%= post.url %></td>
    <td><%= post.short_url %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

