<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, size: '150x30' %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, Post::STATUS_TYPES.collect {|d| [t('.' + d.to_s), Post::STATUS_TYPES.index(d) + 1]},
    prompt: 'Выберите статус'%>
  </div>
  <div class="field">
    <%= f.label :post_time %><br />
    <%= f.text_field :post_time, value: l(Time.now, format: :russian) %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
