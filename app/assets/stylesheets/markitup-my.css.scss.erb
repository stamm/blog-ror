<% img_path = "markitup/sets/markdown/" %>
.markItUpEditor {
  clear: none;
  padding: 0 0 0 10px;
  width: 100%;
  background: white;
}

.markItUpContainer {
  border: none;
  padding:5px 20px 2px 5px;
  background: none;
}

.markItUpEditor {
  border: 1px solid #DCDFE6;
}

.markItUp {
  margin: 0;
  width: 500px;
  border: none;


  .markItUpButton1 a {
    background-image:url(<%= image_path "#{img_path}bold.png" %>);
  }
  .markItUpButton2 a {
    background-image:url(<%= image_path "#{img_path}italic.png" %>);
  }

  .markItUpButton3 a {
    background-image:url(<%= image_path "#{img_path}list-bullet.png" %>);
  }
  .markItUpButton4 a {
    background-image:url(<%= image_path "#{img_path}list-numeric.png" %>);
  }

  .markItUpButton5 a {
    background-image:url(<%= image_path "#{img_path}link.png" %>);
  }

  .markItUpButton6 a	{
    background-image:url(<%= image_path "#{img_path}quotes.png" %>);
  }
  .markItUpButton7 a	{
    background-image:url(<%= image_path "#{img_path}code.png" %>);
  }
  .markItUpButton8 a {
    background-image:url(<%= image_path "#{img_path}preview.png" %>);
  }
}